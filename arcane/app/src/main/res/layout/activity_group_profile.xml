<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nimbus.arcane.GroupProfileActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/group_profile_app_bar" />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/group_profile_image"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/group_profile_app_bar"
        android:src="@drawable/default_avatar"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/group_profile_image"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="Display Name" />

    <TextView
        android:id="@+id/group_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@+id/group_name"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:text="Current User Status" />

    <Button
        android:id="@+id/group_change_image_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="CHANGE IMAGE" />

    <Button
        android:id="@+id/group_change_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/group_change_image_btn"
        android:layout_marginTop="20dp"
        android:text="CHANGE STATUS" />

</RelativeLayout>
