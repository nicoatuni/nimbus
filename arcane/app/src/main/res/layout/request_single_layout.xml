<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/default_avatar"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/request_image" />

    <TextView
        android:id="@+id/request_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:layout_toEndOf="@+id/request_image"
        android:text="Display Name"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="25dp"/>

    <ImageButton
        android:id="@+id/request_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/request_cancel"
        app:srcCompat="@drawable/ic_check_white_24dp"
        android:background="@drawable/round_button_accept"
        android:padding="5dp"/>

    <ImageButton
        android:id="@+id/request_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/ic_close_white_24dp"
        android:padding="5dp"
        android:background="@drawable/round_button_cancel" />

</RelativeLayout>