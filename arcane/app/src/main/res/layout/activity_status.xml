<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nimbus.arcane.StatusActivity">

    <include layout="@layout/app_bar_layout"
        android:id="@+id/status_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/status_app_bar"
        android:layout_centerHorizontal="true"
        android:id="@+id/status_input">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Status"
            android:layout_below="@+id/status_app_bar"
            android:layout_marginTop="30dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/status_change_status_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/status_input"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:text="SAVE CHANGES" />


</RelativeLayout>
